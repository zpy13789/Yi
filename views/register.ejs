<body>
    <div class="main">
        <div class="form">
            <a class="not-on" id="landing" href="http://localhost:3000">登录</a>
            <a class="on" id="registered" href="http://localhost:3000/register">注册</a>
            <div class="fix"></div>

            <form action="/users/addUser" id="registered-content" data-form='ajax' method="POST">
                <div class="inp">
                    <label>
                        <input class="inp-input" data-required="请输入用户名" data-rule="^[a-zA-Z0-9_-]{4,16}$"
                            data-rule-message="请输入4至16位普通字符" data-block="true"  name="userName"
                            type="text" placeholder="请输入用户名" />
                    </label>
                </div>
                <div class="inp">
                    <label>
                        <input class="inp-input" data-required="请输入密码" data-rule="^[\w_-]{6,16}$"
                            data-rule-message="请输入6至16位普通字符" data-block="true"  name="password"
                            type="password" placeholder="请输入密码" />
                    </label>
                </div>
                <div class="inp">
                    <label>
                        <input class="inp-input" data-required="请输入确认密码" data-equal="#pwd_r" 
                            name="passwords" type="password" data-block="true" placeholder="请再次输入密码" />
                    </label>
                </div>
                <button  type="submit" class="login">立即注册</button>
                <div id="bottom">
                    <a href="http://localhost:3000/index" id="registeredtxt">回到首页</a>
                    <a href="forget-pwd.html" onclick="" id="forgotpassword">忘记密码</a>
                </div>
            </form>
        </div>
    </div>
